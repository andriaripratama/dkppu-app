@model DKUPPU.ViewModels.AlterationMajorRegisterViewModel
@{
    ViewBag.Title = "Alteration Major Aircraft";
}
<div class="jarviswidget jarviswidget-sortable" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
    <header>
        <span class="widget-icon"><i class="fa fa-eye"></i></span>
        <h2>Register Form</h2>
        <span class="jarviswidget-loader">
            <i class="fa fa-refresh fa-spin"></i>
        </span>
    </header>
    <div role="content">
        <div class="jarviswidget-editbox"> </div>
        <div class="widget-body">

            <fieldset>
                <div class="form-group">
                    <!--Data Applicant Begin-->
                    @Html.Partial("../MstRegisterForm/_DataOrganizationForm", Model.Organization)
                </div>
            </fieldset>
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.id_trx_aircraft)
                @Html.HiddenFor(model => model.id_aircraft_certificate)
                @Html.HiddenFor(model => model.id_aircraft_model)
                @Html.HiddenFor(model => model.id_license_type)
                @Html.HiddenFor(model => model.id_sop_type)

                <!--Registration Number-->
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.registration_number)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.registration_number, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.aircraft_type)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.aircraft_type, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.registration_marks)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.registration_marks, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.serial_number)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.serial_number, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.applicant_mod_no)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.applicant_mod_no, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.design_responsibility)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.design_responsibility, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.brief_description_of_modification)
                        </label>
                        <div class="col-md-4">
                            @Html.TextAreaFor(model => model.brief_description_of_modification, new { @class = "form-control required-value", @cols = 55, @rows = 4 })
                        </div>
                    </div>
                    <fieldset>
                        <legend>
                            Foreign Authority Approval Reference(if any)
                        </legend>
                    </fieldset>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.approval_number)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.approval_number, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.date_foreign)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.date_foreign, new { htmlAttributes = new { @class = "form-control required-value date-picker" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.classification)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.classification, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <fieldset>
                        <legend>Upload Document</legend>
                        @Html.Partial("../MstRegisterForm/_DocUploadForm", Model.MstDocUploadViewModel)
                    </fieldset>
                    <div class="form-group">
                        <div class="row col-md-12">
                            
                            <div id="error" class="col-md-12">
                                <input type="checkbox" required="required" />
                                I certify that the statement made on this applicant are true
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.place)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.place, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.date)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control required-value date-picker" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.position)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.position, new { htmlAttributes = new { @class = "form-control required-value date-picker" } })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label text-left">
                            @Html.LabelFor(model => model.phone_number)
                        </label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.phone_number, new { htmlAttributes = new { @class = "form-control required-value" } })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button class="btn btn-primary" type="submit"> Submit </button>
                        <a href="#" class="btn btn-danger"> Back </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script>
    $(function () {

        // datepicker
        $('.date-picker').datepicker({
            //options
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            //...
        });
    });
</script>