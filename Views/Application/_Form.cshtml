@model DKUPPU.ViewModels.MstParameterViewModel

@{
    Layout = null;
}
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.id_parameter, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-8">
            @if (ViewBag.Title == "Update Parameter")
            {
                @Html.EditorFor(model => model.id_parameter, new { htmlAttributes = new { @class = "form-control", @readonly="readonly"} })
            }
            else
            {
                @Html.EditorFor(model => model.id_parameter, new { htmlAttributes = new { @class = "form-control" } })
            }
            
            @Html.ValidationMessageFor(model => model.id_parameter, "", new { @class = "text-danger" })
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(model => model.param_value, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.param_value, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.param_value, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.param_description, htmlAttributes: new { @class = "control-label col-md-2 text-left" })
        <div class="col-md-8">
            @Html.EditorFor(model => model.param_description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.param_description, "", new { @class = "text-danger" })
        </div>
    </div>
</div>
