@model DKUPPU.ViewModels.DOAircraftRegisterViewModel
@{
    ViewBag.Title = "Revisi Dokumen Operasi";
}

<div class="jarviswidget jarviswidget-sortable" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
    <header>
        <span class="widget-icon"><i class="fa fa-eye"></i></span>
        <h2>Register Form</h2>
        <span class="jarviswidget-loader">
            <i class="fa fa-refresh fa-spin"></i>
        </span>
    </header>
    <div role="content">
        <div class="jarviswidget-editbox"> </div>
        <div class="widget-body">

            <!--Data Organization Begin-->
            @Html.Partial("../TrxAircraft/RegisterForm/_DataOrganizationForm", Model.MstOrganizationViewModel)

            <!--Data Applican End-->
            <!--Form Begin-->
            @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <!--ID Primary-->
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.id_trx_aircraft)
                    @Html.HiddenFor(model => model.id_license_type_aircraft)
                    @Html.HiddenFor(model => model.id_sop_type_aircraft)
                    <fieldset>
                        <legend>Operation Aircraft Document</legend>
                        <div class="form-group">
                            <label class="col-md-4">
                                @Html.LabelFor(model => model.DokName)
                            </label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.DokName, new { htmlAttributes = new { @class = "form-control required-value" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">
                                @Html.LabelFor(model => model.changeLog)
                            </label>
                            <div class="col-md-5">
                                @Html.TextAreaFor(model => model.changeLog, new { @class = "form-control required-value col-md-5" } )
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">
                                @Html.LabelFor(model => model.desc)
                            </label>
                            <div class="col-md-5">
                                @Html.TextAreaFor(model => model.desc,  new { @class = "form-control required-value col-md-5" } )
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Upload Document</legend>
                        @*@Html.Partial("../MstRegisterForm/_DocUploadForm", Model.MstDocUploadViewModel)*@
                    </fieldset>
                    <div id="error">
                        <input type="checkbox" required="required" />
                        I hereby certify that the information above given are correct
                    </div>

                    <div class="form-actions">
                        <button class="btn btn-primary" type="submit"> Submit </button>
                        <a href="#" class="btn btn-danger"> Cancel </a>
                    </div>
                </div>
            <!--End Form-->
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //$('#tabs').tabs();
    });
</script>
