@{
    ViewBag.Title = "Page500";

    string errorMessage = string.Empty;
    
    if (ViewBag.User != null)
    {
        Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    }
    if (ViewBag.Message != null)
    {
        errorMessage = "(" + ViewBag.Message + ")";
    }
}


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center error-box">
                <h2 class="font-xl">
                    <strong>Oooops, Something went wrong!</strong>
                </h2>
                <br>
                <p class="lead semi-bold">
                    <strong>You have experienced a technical error @errorMessage. We apologize.</strong>
                    <br>
                    <br>
                    <small>
                        We are working hard to correct this issue. Please wait a few moments and try your search again.
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

