            }
            var oldNTr = $trNew.attr('id');
            var newNTr = oldNTr.replace('_' + suffix, '_' + (parseInt(suffix) + 1));
            $trNew.attr('id', newNTr);
            $.each($trNew.find(':input'), function (i, val) {

