            var $CompetencyCheck = $('#TrxLicCompetencyCheckViewModel');
            var $RecurrentTypeOfAircraft = $('#TrxLicRecurrentTypeOfAircraftViewModel');
            var $FamiliarizationFlight = $('#TrxLicFamiliarizationFlightViewModel');

