@model IEnumerable<DKUPPU.ViewModels.TrxLicCompetencyCheckViewModel>
@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ratting</th>
                <th>Date Of Checks</th>
                <th>Valid Until</th>
            </tr>
        </thead>
        <tbody id="TrxLicCompetencyCheckViewModel">
            @{
                int j = 0;
                string vreadonly = "";
                string vrequered = "";
                string datepicker = "";
                string from_date = "";
                string until_date = "";
            }
            @foreach (DKUPPU.ViewModels.TrxLicCompetencyCheckViewModel item in Model)
            {
                vreadonly = "readonly='readonly'";
                vrequered = "";
                datepicker = "";
                from_date = "";
                until_date = "";
                if ((item.is_history == false || item.is_history == true) && ViewBag.activity_id == "ACT01")
                {
                    vreadonly = "";
                    vrequered = "required-value";
                    from_date = "from-date";
                    until_date = "until-date";
                    datepicker = "date-picker";
                }
                <tr id="TrxLicCompetencyCheckViewModel_@j">
                    <td>
                        <input type="hidden" name="TrxLicCompetencyCheckViewModel[@j].id_rating" id="TrxLicCompetencyCheckViewModel_@j.ToString()__id_rating" required="required" value="@Html.DisplayFor(a => item.id_rating)">
                        <input type="hidden" name="TrxLicCompetencyCheckViewModel[@j].id_trx_lic_competency_check" id="TrxLicCompetencyCheckViewModel_@j.ToString()__id_trx_lic_competency_check" value="@Html.DisplayFor(a => item.id_trx_lic_competency_check)">
                        <input type="text" class="form-control" name="TrxLicCompetencyCheckViewModel[@j].rating" id="TrxLicCompetencyCheckViewModel_@j.ToString()__rating" required="required" readonly="readonly" value="@Html.DisplayFor(a => item.rating)">
                    </td>
                    <td>
                        <input type="text" class="form-control date-picker @vrequered @from_date @datepicker" @vreadonly name="TrxLicCompetencyCheckViewModel[@j].checked_date" id="TrxLicCompetencyCheckViewModel_@j.ToString()__checked_date" value="@Html.DisplayFor(a => item.checked_date)">
                    </td>
                    <td>
                        <input type="text" class="form-control date-picker @vrequered @until_date @datepicker" @vreadonly name="TrxLicCompetencyCheckViewModel[@j].expired_date" id="TrxLicCompetencyCheckViewModel_@j.ToString()__expired_date" value="@Html.DisplayFor(a => item.expired_date)">
                    </td>
                </tr>
                j++;
            }
        </tbody>

    </table>
</div>



