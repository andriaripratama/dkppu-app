@model DKUPPU.ViewModels.TrxLicTechnicalNoteViewModel
@{
    Layout = null;

    bool isDocumentUploadStatusDisabled = ViewBag.IsDocumentUploadStatusDisabled == null ? false : (ViewBag.IsDocumentUploadStatusDisabled ? true : false);
    string tagDocumentUploadStatusDisabled = isDocumentUploadStatusDisabled ? "disabled = 'disabled'" : string.Empty;
    string textDisabled = isDocumentUploadStatusDisabled ? "readonly = 'readonly'" : string.Empty;
    string satisfied = Model.is_satisfied == true ? "checked" : "";
    string unSatified = Model.is_satisfied == false ? "checked" : "";
}

<div class="row">
    <div class="col-xs-12">
        <div class="form-horizontal">
            @if (!isDocumentUploadStatusDisabled)
            {
                <div class="form-group">
                    <label class="col-md-2 control-label text-left" for="sertificate_no">Technical Data *</label>
                    <div class="col-md-5">
                        <div class="col-xs-6 no-padding">
                            <input type="radio" class="satisfied" name="TrxLicTechnicalNoteViewModel.is_satisfied" id="TrxLicTechnicalNoteViewModel__is_satisfied" value="True" @satisfied @tagDocumentUploadStatusDisabled /> <label for="TrxLicTechnicalNoteViewModel__is_satisfied">Satisfied</label>
                            <input type="hidden" name="TrxLicTechnicalNoteViewModel.id_trx_technical_note" id="TrxLicTechnicalNoteViewModel__id_trx_technical_note" value="@Html.DisplayFor(a => Model.id_trx_technical_note)" />
                        </div>
                        <div class="col-xs-6 no-padding">
                            <input type="radio" class="un-satisfied" name="TrxLicTechnicalNoteViewModel.is_satisfied" id="TrxLicTechnicalNoteViewModel__is_unsatisfied" value="False" @unSatified @tagDocumentUploadStatusDisabled /> <label for="TrxLicTechnicalNoteViewModel__is_unsatisfied">Unsatisfied</label>
                        </div>
                    </div>
                </div>
            }
            
            <div class="form-group">
                <label class="col-md-2 control-label text-left" for="sertificate_no">Note For User External </label>
                <div class="col-md-10">
                    <textarea name="TrxLicTechnicalNoteViewModel.technical_notes" id="TrxLicTechnicalNoteViewModel__technical_notes" class="form-control control-label text-left" @textDisabled style="color:#000">@Html.DisplayFor(a => Model.technical_notes)</textarea>
                </div>
            </div>
        </div>
        
    </div>

</div>