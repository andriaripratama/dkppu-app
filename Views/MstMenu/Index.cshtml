@model IEnumerable<DKUPPU.ViewModels.MstMenuViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-xs-12">
        <div class="form-horizontal">
            <div class="form-group">
                @Html.Label("Key Search", new { @class = "class-label col-md-2" })
                <div class="col-md-4">
                    <input type="text" id="search-name" name="search-name" class="form-control" />
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-primary pull-left" id="btn_search">Search</button>
                    <a href="@Url.Action("Create","MstMenu")" class="btn btn-labeled btn-primary pull-right"><span class="btn-label"><i class="glyphicon glyphicon-plus"></i></span>Add</a>

                </div>
            </div>
        </div>

    </div>
</div>
<!-- Widget ID (each widget will need unique ID)-->
<div class="jarviswidget jarviswidget-color-greenDark" id="wid-id-0" data-widget-editbutton="false">
    <!-- widget options:
    usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

    data-widget-colorbutton="false"
    data-widget-editbutton="false"
    data-widget-togglebutton="false"
    data-widget-deletebutton="false"
    data-widget-fullscreenbutton="false"
    data-widget-custombutton="false"
    data-widget-collapsed="true"
    data-widget-sortable="false"

    -->
    <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2>List Menu </h2>

    </header>

    <!-- widget div-->
    <div>

        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
            <!-- This area used as dropdown edit box -->

        </div>
        <!-- end widget edit box -->
        <!-- widget content -->
        <div class="widget-body no-padding" id="lis-user-approval">

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.menu_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.menu_title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.menu_action)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.menu_controller)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.menu_params)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fa fa-@item.menu_icon"></i>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.menu_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.menu_title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.menu_action)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.menu_controller)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.menu_params)
                            </td>
                            <td class="text-center" width="13%">
                                <a href="@Url.Action("Edit", "MstMenu", new { id = item.id_menu })" class="btn btn-primary btn-circle"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("Details", "MstMenu", new { id = item.id_menu })" class="btn btn-primary btn-circle"><i class="fa fa-search"></i></a>
                                <a href="@Url.Action("Delete", "MstMenu", new { id = item.id_menu })" class="btn btn-danger btn-circle"><i class="fa fa-trash-o"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- end widget content -->

    </div>
    <!-- end widget div -->

</div>
<!-- end widget -->
