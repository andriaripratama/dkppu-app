@model DKUPPU.ViewModels.MstApplicantViewModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-2">
        @if (Model.photo_file == "NOT NULL")
        {
            <img alt="Applican Photo" src="@Url.Action("RetriveFile", "Applicant", new {id = Model.id_applicant })" height="150" width="150">
        }
        else
        {
            <img alt="Applican Photo" src="~/Images/pilot.png" height="150">
        }
    </div>
    <div class="col-xs-6">
        <table class="table table-striped table-bordered">
            <tr>
                <td class="col-xss-3">@Html.DisplayNameFor(modelItem => modelItem.full_name)</td>
                <td>:</td>
                <td class="col-xs-9">@Html.DisplayFor(modelItem => modelItem.full_name)</td>
            </tr>
            <tr>
                <td class="col-xs-3">@Html.DisplayNameFor(modelItem => modelItem.date_of_birth)</td>
                <td>:</td>
                <td class="col-xs-9">@Html.DisplayFor(modelItem => modelItem.date_of_birth_text)</td>
            </tr>
            <tr>
                <td class="col-xs-3">@Html.DisplayNameFor(modelItem => modelItem.address)</td>
                <td>:</td>
                <td class="col-xs-9">@Html.DisplayFor(modelItem => modelItem.address)</td>
            </tr>
            <tr>
                <td class="col-xs-3">@Html.DisplayNameFor(modelItem => modelItem.company_name)</td>
                <td>:</td>
                <td class="col-xs-9">@Html.DisplayFor(modelItem => modelItem.company_name)</td>
            </tr>
        </table>
    </div>
    <div class="col-xs-4">
        <table class="table table-striped table-bordered">
            <tr>
                <td class="col-xs-2">@Html.DisplayNameFor(modelItem => modelItem.nationality_name)</td>
                <td>:</td>
                <td class="col-xs-10">@Html.DisplayFor(modelItem => modelItem.nationality_name)</td>
            </tr>
            <tr>
                <td class="col-xs-2">@Html.DisplayNameFor(modelItem => modelItem.gender)</td>
                <td>:</td>
                <td class="col-xs-10">@Html.DisplayFor(modelItem => modelItem.gender)</td>
            </tr>
            <tr>
                <td class="col-xs-2">@Html.DisplayNameFor(modelItem => modelItem.height)</td>
                <td>:</td>
                <td class="col-xs-10">@Html.DisplayFor(modelItem => modelItem.height) cm</td>
            </tr>
            <tr>
                <td class="col-xs-2">@Html.DisplayNameFor(modelItem => modelItem.weight)</td>
                <td>:</td>
                <td class="col-xs-10">@Html.DisplayFor(modelItem => modelItem.weight) kg</td>
            </tr>
        </table>
    </div>
</div>