@model List<DKUPPU.ViewModels.MstDocUploadViewModel>
@{
    Layout = null;
    string required = "";
    string bintang = "";
}
<div class="row">
    <div class="col-xs-12">
        <div class="form-horizontal">
            @{
                int j = 0;

                string fileSize = ViewBag.DocUploadFileSize == null ? string.Empty : ViewBag.DocUploadFileSize;
            }

            <input type="hidden" id="DocUploadFormFileSize" value="@fileSize" />

            @foreach (DKUPPU.ViewModels.MstDocUploadViewModel item in Model)
            {
                required = "";
                bintang = "";
                if (item.is_mandatory)
                {
                    required = "required-value";
                    bintang = "*";
                }
                <div class="form-group">
                    <label class="col-md-4 control-label text-left" for="sertificate_no">@Html.DisplayFor(m => m[j].label_name) @bintang</label>
                    <div class="col-md-5">
                        <input type="file" class="btn btn-default @required" data-validation="@required" name="[@j].File" id="@j.ToString()__File" />
                        <input type="hidden" name="MstDocUploadViewModel[@j].id_doc_category" id="MstDocUploadViewModel_@j.ToString()__id_doc_category" value="@Html.DisplayFor(m => m[j].id_doc_category)" />
                    </div>
                </div>
                j++;
            }
        </div>
    </div>

</div>