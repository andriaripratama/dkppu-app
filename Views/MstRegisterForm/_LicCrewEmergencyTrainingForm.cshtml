@model IEnumerable<DKUPPU.ViewModels.TrxLicCrewEmergencyTrainingViewModel>
@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date Of Recurrent</th>
                <th>Valid Until</th>
            </tr>
        </thead>
        <tbody id="TrxLicCrewEmergencyTrainingViewModel">
            @{int j = 0;}
            @foreach (var item in Model)
            {
                <tr id="TrxLicCrewEmergencyTrainingViewModel_@j">
                    <td><input type="text" class="form-control date-picker" name="TrxLicCrewEmergencyTrainingViewModel[@j].recurrent_date" id="TrxLicCrewEmergencyTrainingViewModel_@j.ToString()__recurrent_date"></td>
                    <td><input type="text" class="form-control date-picker" name="TrxLicCrewEmergencyTrainingViewModel[@j].expired_date" id="TrxLicCrewEmergencyTrainingViewModel_@j.ToString()__expired_date"></td>
                </tr>
                j++;
            }
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('.date-picker').datepicker({
            //options
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true
            //...
        });
    });
</script>



