@model DKUPPU.ViewModels.TrxLicMedicalCertificateViewModel
@{
    Layout = null;
}
<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.med_certi_no)</th>
                <th>@Html.DisplayNameFor(model => model.from_date)</th>
                <th>@Html.DisplayNameFor(model => model.until_date)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input name="TrxLicMedicalCertificateViewModel.med_certi_no" id="TrxLicMedicalCertificateViewModel_med_certi_no" class="form-control required-value" placeholder="Medical Class" /></td>
                <td><input name="TrxLicMedicalCertificateViewModel.from_date" id="TrxLicMedicalCertificateViewModel_from_date" class="form-control date-picker required-value" placeholder="Input From Date" /></td>
                <td><input name="TrxLicMedicalCertificateViewModel.until_date" id="TrxLicMedicalCertificateViewModel_until_date" class="form-control date-picker required-value" placeholder="Input Until Date" /></td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    $(function () {
        $('.date-picker').datepicker({
            //options
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true
            //...
        });
    });
</script>